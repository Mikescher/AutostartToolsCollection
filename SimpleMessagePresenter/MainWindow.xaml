<Window x:Class="SimpleMessagePresenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleMessagePresenter"
        mc:Ignorable="d"
		WindowStartupLocation="CenterScreen"
		Topmost="True"
        Title="MainWindow" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<TextBox 
			x:Name="MainBox"
			IsReadOnly="True" IsReadOnlyCaretVisible="True" 
			Margin="5" Grid.Row="0"
			FontFamily="Courier New" 
			VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>

		<Button Grid.Row="1" Content="OK" HorizontalAlignment="Right" MinWidth="100" FontWeight="Bold" Margin="4" Click="Button_Click" />

	</Grid>
</Window>
